{% extends 'base.html.twig' %}

{% block title %}
PodcastTime - Login
{% endblock %}

{% block body %}

{% if error %}
<div class="alert alert-danger alert-dimissible m-4">
    Credenciales incorrectas
</div>
{% endif %}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 card p-4 d-flex justify-content-center align-items-center flex-column">
            <h3 class="text-center">
                Iniciar sesión
            </h3>
            <div class="">
                <form action="{{ path('login') }}" method="POST">

                    <label for="username">
                            Usuario           
                        </label>
                    <input type="text" name="_username" id="username" class="form-control" required>

                    <label for="password">
                                Contraseña
                                                            
                            </label>
                    <input type="password" name="_password" id="password" class="form-control" required>

                    <input type="hidden" name="_target_path" value="/podcasts/">
                    <div class="d-flex">
                        <input type="submit" value="Iniciar sesión" class="btn btn-primary mt-3">
                        <a href="{{ path('podcast_userRegistro') }}" class="btn btn-link mt-3 ms-3">
                            Registrarse

                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-4">

            <div class="mt-5 d-flex justify-content-center">
                <img src="{{ asset('assets/auth.svg') }}" alt="404" class="img-fluid">
            </div>

        </div>
    </div>

</div>
{% endblock %}